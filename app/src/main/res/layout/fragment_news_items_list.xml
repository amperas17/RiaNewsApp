<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amperas17.rianewsapp.NewsItemsListFragment"
    >

    <ListView
        android:id="@id/android:list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#AAA"
        android:dividerHeight="3dp"
        >
    </ListView>

    <ProgressBar
        android:id="@+id/progressbar_news_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />


    <TextView
        android:id="@+id/tvNewsItemCategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/tvNewsItemCategoryLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/tvNewsItemCategoryName"/>

    <Button
        android:id="@+id/btnInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickInsert"
        android:layout_below="@+id/tvNewsItemCategoryName"
        android:text="insert">
    </Button>

</RelativeLayout>
